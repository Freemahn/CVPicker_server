<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <servlet>
        <servlet-name>com.freemahn.UploadServlet</servlet-name>
        <servlet-class>com.freemahn.UploadServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>com.freemahn.TestServlet</servlet-name>
        <servlet-class>com.freemahn.TestServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>

    <servlet-mapping>
        <servlet-name>com.freemahn.UploadServlet</servlet-name>
        <url-pattern>api/upload</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>com.freemahn.TestServlet</servlet-name>
        <url-pattern>api/test</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>send.jsp</welcome-file>
    </welcome-file-list>


</web-app>
